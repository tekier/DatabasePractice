@model DatabaseMvcWebApp.ViewModels.EmployeeViewModel

@{
    ViewBag.Title = "title";
}
<b>@Html.ActionLink("Back to home...", "Index", "Home")</b>
<h2>All Employees in Database</h2>

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
    }
</style>

<style>
    label, input {
        display: block;
    }
    label {
        margin-bottom: 20px
    }
</style>

<table>
    <tr>
        @foreach (var item in Model.coloumnNames)
        {
            <th>@item</th>
        }
    </tr>
    @{
        int count = 0;
        int columns = Model.coloumnNames.Count;
        int rows = (Model.employees.Count) / columns;
        for (int i = 0; i < rows; i++)
        {
            <tr>
                @for (int j = 0; j < columns; j++)
                {
                    <td>@Model.employees[count]</td>
                    count = count + 1;
                }
            </tr>
        }
    }
</table>

<h3>Search by these fields:</h3>

@using (Html.BeginForm())
{
    <label>
        ID
        <input type="text" name="id"/>
    </label>
    
    <label>
        First Name
        <input type="text" name="forename" />
    </label>
    
    <label>
        Surname
        <input type="text" name="surname" />
    </label>
    
    <label>
        DOB
        <input type="text" name="dob" />
    </label>
    
    <label>
        Role
        <input type="text" name="role" />
    </label>
    
    <label>
        Room
        <input type="text" name="room" />
    </label>
    
    <label>
        <input type="submit"/>
    </label>
}
