@model DatabaseMvcWebApp.ViewModels.EmployeeViewModel

@{
    ViewBag.Title = "title";
}

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
    }
</style>

<h2>Filtered Employee Table</h2>
<table>
    <tr>
        @foreach (var item in Model.coloumnNames)
        {
            <th>@item</th>
        }
    </tr>
    @{
        int count = 0;
        int columns = Model.coloumnNames.Count;
        int rows = (Model.employees.Count) / columns;
        for (int i = 0; i < rows; i++)
        {
            <tr>
                @for (int j = 0; j < columns; j++)
                {
                    <td>@Model.employees[count]</td>
                    count = count + 1;
                }
            </tr>
        }
    }
</table>